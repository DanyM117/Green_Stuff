@model Green_Stuff.Models.ViewModels.WaterDemmandVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oWater.IdWater == 0)
{
    <h1>Crear demanda de agua</h1>
}
else
{
    <h1>Editar</h1>
}

<div class="row">
    <div class="col-4">
        <form asp-action="Detail" asp-controller="WaterDemmand" method="post">
            <input type="hidden" asp-for="oWater.IdWater" />
            <div class="mb-2">
                <label class="fore-label" asp-for="oWater.Name">Nombre</label>
                <input class="form-control form-control-sm" asp-for="oWater.Name" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oWater.Description">Descripción</label>
                <input class="form-control form-control-sm" asp-for="oWater.Description" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oWater.ModificationDate">Fecha modificación</label>
                <input class="form-control form-control-sm" asp-for="oWater.ModificationDate" type="text" />
            </div>
            <div class="mb-2">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="oWater.Enabled">
                    <label class="form-check-label" for="flexSwitchCheckChecked" asp-for="oWater.Enabled">Habilitado</label>
                </div>
            </div>

            <div class="mb-3">
                @if (Model.oWater.IdWater == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="WaterDemmand">Volver</a>
            </div>
        </form>
    </div>

</div>