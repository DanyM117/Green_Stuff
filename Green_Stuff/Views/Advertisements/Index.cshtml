@model List<Green_Stuff.Models.Advertisement>
@{
    ViewData["Title"] = "Anuncios";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de anuncios</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Detail" asp-controller="Advertisements" asp-route-IdItem="0">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Usuario</th>
                    <th>Titulo</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAdvertisement</td>
                        <td>@item.oUsers.Username</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><img src="@item.ImagePath" alt="Image" width="100"></td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="Advertisements" asp-route-IdAdvertisement="@item.IdAdvertisement">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Advertisements" asp-route-IdAdvertisement="@item.IdAdvertisement">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
