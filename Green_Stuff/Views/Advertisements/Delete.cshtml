@model Green_Stuff.Models.Advertisement
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-danger">Está seguro de eliminar este registro?</h3>
<hr />
<div class="card">
    <div class="row">
        <div class="col-4">
            <form asp-action="Delete" asp-controller="Advertisements" method="post">
                <input type="hidden" asp-for="IdAdvertisement" />
                <div class="mb-2">
                    <label class="fore-label" asp-for="Iduser">Username</label>
                    <input class="form-control form-control-sm" asp-for="oUsers.Username" type="text" disabled />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="Title">Titulo</label>
                    <input class="form-control form-control-sm" asp-for="Title" type="text" disabled />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="Description">Descripción</label>
                    <input class="form-control form-control-sm" asp-for="Description" type="text" disabled />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="ImagePath">Imagen</label>
                    <input class="form-control form-control-sm" asp-for="ImagePath" type="text" disabled />
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary btn-sm w-25" type="submit">Eliminar</button>
                    <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Advertisements">Volver</a>
                </div>
            </form>
        </div>

    </div>
</div>
