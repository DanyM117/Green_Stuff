@model Green_Stuff.Models.ViewModels.AdvertisementsVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oAd.IdAdvertisement == 0)
{
    <h1>Crear anuncio</h1>
}
else
{
    <h1>Editar</h1>
}

<div class="row">
    <div class="col-4">
        <form asp-action="Detail" asp-controller="Advertisements" method="post">
            <input type="hidden" asp-for="oAd.IdAdvertisement" />
            <div class="mb-2">
                <label class="fore-label" asp-for="oAd.Iduser">Usuario</label>
                <select class="form-select form-select-sm" asp-for="oAd.Iduser" asp-items="@Model.oadslist">
                    <option selected disabled>-- SLECT --</option>
                </select>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oAd.Title">Titulo</label>
                <input class="form-control form-control-sm" asp-for="oAd.Title" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oAd.Description">Descripción</label>
                <input class="form-control form-control-sm" asp-for="oAd.Description" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oAd.ImagePath">Imagen</label>
                <input class="form-control form-control-sm" asp-for="oAd.ImagePath" type="text" />
            </div>

            <div class="mb-3">
                @if (Model.oAd.IdAdvertisement == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Advertisements">Volver</a>
            </div>
        </form>
    </div>

</div>