@model Green_Stuff.Models.ViewModels.UsersVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oUser.IdUser == 0)
{
    <h1>Crear Usuario</h1>
}
else
{
    <h1>Editar</h1>
}

<div class="row">
    <div class="col-4">
        <form asp-action="Detail" asp-controller="User" method="post">
            <input type="hidden" asp-for="oUser.IdUser" />
            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.IduserType">Tipo</label>
                <select class="form-select form-select-sm" asp-for="oUser.IduserType" asp-items="@Model.oUserTypeList">
                    <option selected disabled>-- SLECT --</option>
                </select>
            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.Username">Username</label>
                <input class="form-control form-control-sm" asp-for="oUser.Username" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.FirstName">Nombres</label>
                <input class="form-control form-control-sm" asp-for="oUser.FirstName" type="text" />
            </div>

            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.LastName">Apellidos</label>
                <input class="form-control form-control-sm" asp-for="oUser.LastName" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.Email">Email</label>
                <input class="form-control form-control-sm" asp-for="oUser.Email" type="text" />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="oUser.Password">Contraseña</label>
                <input class="form-control form-control-sm" asp-for="oUser.Password" type="text" />
            </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oUser.ImagePath">Imagen</label>
                    <input class="form-control form-control-sm" asp-for="oUser.ImagePath" type="text" />
                </div>

            <div class="mb-3">
                @if (Model.oUser.IdUser == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="User">Volver</a>
            </div>
        </form>
    </div>

</div>
