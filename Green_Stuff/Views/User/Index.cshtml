@model List<Green_Stuff.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de usuarios</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Detail" asp-controller="User" asp-route-IdItem="0">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tipo</th>
                    <th>Username</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Contraseña</th>
                    <th>Imagen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdUser</td>
                        <td>@item.oUserTypes.Name</td>
                        <td>@item.Username</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Password</td>
                        <td>@item.ImagePath</td>
                        <td><img src="@item.ImagePath" alt="Image" width="100"></td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="User" asp-route-IdUser="@item.IdUser">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="User" asp-route-IdUser="@item.IdUser">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
