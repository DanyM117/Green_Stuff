@model List<Green_Stuff.Models.PaymentCard>
@{
    ViewData["Title"] = "Tarjetas de pago";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de tarjetas</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Detail" asp-controller="PaymentCards" asp-route-IdItem="0">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Usuario</th>
                    <th>Numero</th>
                    <th>Nombre en tarjeta</th>
                    <th>CVV</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdCard</td>
                        <td>@item.oUsers.Username</td>
                        <td>@item.Number</td>
                        <td>@item.NameOnCard</td>
                        <td>@item.Cvv</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="PaymentCards" asp-route-IdCard="@item.IdCard">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="PaymentCards" asp-route-IdCard="@item.IdCard">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>