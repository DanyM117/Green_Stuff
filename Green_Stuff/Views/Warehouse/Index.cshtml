@model List<Green_Stuff.Models.Warehouse>
@{
    ViewData["Title"] = "Almacen";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de almacen</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Warehouse_Detail" asp-controller="Warehouse" asp-route-IdItem="0">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tamaño</th>
                    <th>Exposicion al sol</th>
                    <th>Demanda de agua</th>
                    <th>Categoria</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Descripción</th>
                    <th>Imagen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.IdItem</td>
                        <td>@item.oSizes.Name</td>
                        <td>@item.oExpositionToSun.Name</td>
                        <td>@item.oWaterDemmand.Name</td>
                        <td>@item.oCategories.Name</td>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.Description</td>
                        <td><img src="@item.ImagePath" alt="Image" width="100"></td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Warehouse_Detail" asp-controller="Warehouse" asp-route-IdItem="@item.IdItem">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Warehouse" asp-route-IdItem="@item.IdItem">Eliminar</a>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>