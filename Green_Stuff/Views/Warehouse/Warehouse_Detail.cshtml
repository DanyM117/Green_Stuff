@model Green_Stuff.Models.ViewModels.WarehouseVM
@{
    ViewData["Title"] = "Warehouse_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oWarehouse.IdItem == 0){
    <h1>Crear Item</h1>
}
else
{
    <h1>Editar</h1>
}
<div class="card">
    <div class="row">
        <div class="col-4">
            <form asp-action="Warehouse_Detail" asp-controller="Warehouse" method="post">
                <input type="hidden" asp-for="oWarehouse.IdItem" />
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Idsize">Tamaño</label>
                    <select class="form-select form-select-sm" asp-for="oWarehouse.Idsize" asp-items="@Model.oSizesList">
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Idsun">Exposicion al sol</label>
                    <select class="form-select form-select-sm" asp-for="oWarehouse.Idsun" asp-items="@Model.oExpositionToSunList">
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Idwater">Demanda de agua</label>
                    <select class="form-select form-select-sm" asp-for="oWarehouse.Idwater" asp-items="@Model.oWaterDemmandList">
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Idcategory">Categoría</label>
                    <select class="form-select form-select-sm" asp-for="oWarehouse.Idcategory" asp-items="@Model.oCategoriesList">
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Name">Nombre</label>
                    <input class="form-control form-control-sm" asp-for="oWarehouse.Name" type="text" />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Quantity">Cantidad</label>
                    <input class="form-control form-control-sm" asp-for="oWarehouse.Quantity" type="text" />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.UnitPrice">Precio Unitario</label>
                    <div class="input-group">
                        <input type="text" class="form-control form-control-sm" asp-for="oWarehouse.UnitPrice" aria-label="Dollar amount (with dot and two decimal places)">
                        <span class="input-group-text">$</span>
                        <span class="input-group-text">0.00</span>
                    </div>
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.Description">Descripción</label>
                    <input class="form-control form-control-sm" asp-for="oWarehouse.Description" type="text" />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oWarehouse.ImagePath">Imagen</label>
                    <input class="form-control form-control-sm" asp-for="oWarehouse.ImagePath" type="text" />
                </div>

                <div class="mb-3">
                    @if (Model.oWarehouse.IdItem == 0)
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                    }
                    else
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                    }
                    <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Warehouse">Volver</a>
                </div>
            </form>
        </div>

    </div>
</div>
