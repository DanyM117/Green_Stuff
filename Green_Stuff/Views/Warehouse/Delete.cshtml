@model Green_Stuff.Models.Warehouse
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-danger">Está seguro de eliminar este registro?</h3>
<hr />
<div class="row">
    <div class="col-4">
        <form asp-action="Delete" asp-controller="Warehouse" method="post">
            <input type="hidden" asp-for="IdItem" />
            <div class="mb-2">
                <label class="fore-label" asp-for="Idsize">Tamaño</label>
                <input class="form-control form-control-sm" asp-for="oSizes.Name" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Idsun">Exposicion al sol</label>
                <input class="form-control form-control-sm" asp-for="oExpositionToSun.Name" type="text"  disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Idwater">Demanda de agua</label>
                <input class="form-control form-control-sm" asp-for="oWaterDemmand.Name" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Idcategory">Categoría</label>
                <input class="form-control form-control-sm" asp-for="oCategories.Name" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Name">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Name" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Quantity">Cantidad</label>
                <input class="form-control form-control-sm" asp-for="Quantity" type="text" disabled/>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="UnitPrice">Precio Unitario</label>
                <div class="input-group">
                    <input type="text" class="form-control form-control-sm" asp-for="UnitPrice" aria-label="Dollar amount (with dot and two decimal places)" disabled>
                    <span class="input-group-text">$</span>
                    <span class="input-group-text">0.00</span>
                </div>
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="Description">Descripción</label>
                <input class="form-control form-control-sm" asp-for="Description" type="text" disabled />
            </div>
            <div class="mb-2">
                <label class="fore-label" asp-for="ImagePath">Imagen</label>
                <input class="form-control form-control-sm" asp-for="ImagePath" type="text" disabled />
            </div>

            <div class="mb-3">
                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Warehouse">Volver</a>
            </div>
        </form>
    </div>

</div>
