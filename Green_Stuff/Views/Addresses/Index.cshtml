@model List<Green_Stuff.Models.Address>
@{
    ViewData["Title"] = "Direcciones";
}
<div class="card">
    <div class="card-header">
        <h5>Lista de direcciones</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Detail" asp-controller="Addresses">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Direccion</th>
                    <th>Fecha modificacion</th>
                    <th>Habilitado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAdd</td>
                        <td>@item.oUsers.Username</td>
                        <td>@item.Name</td>
                        <td>@item.ModificationDate</td>
                        <td>@item.Enabled</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="Addresses" asp-route-IdAdd="@item.IdAdd">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Addresses" asp-route-IdAdd="@item.IdAdd">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
