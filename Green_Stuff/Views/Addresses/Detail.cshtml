@model Green_Stuff.Models.ViewModels.AddressesVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oAddress.IdAdd == 0)
{
    <h1>Crear Direccion</h1>
}
else
{
    <h1>Editar</h1>
}

<div class="row">
    <div class="col-4">
        <form asp-action="Detail" asp-controller="Addresses" method="post">
            <input type="hidden" asp-for="oAddress.IdAdd" />
                @if (Model.oAddress.IdAdd == 0)
                {
                <div class="mb-2">
                    <label class="fore-label" asp-for="oAddress.Iduser">Username</label>
                    <select class="form-select form-select-sm" asp-for="oAddress.Iduser" asp-items="@Model.oUserList">
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                }else
                {
                <div class="mb-2">
                    <label class="fore-label" asp-for="oAddress.Iduser">Username</label>
                    <select class="form-select form-select-sm" asp-for="oAddress.Iduser" asp-items="@Model.oUserList" disabled>
                        <option selected disabled>-- SLECT --</option>
                    </select>
                </div>
                }
                <div class="mb-2">
                    <label class="fore-label" asp-for="oAddress.Name">Direccion</label>
                    <input class="form-control form-control-sm" asp-for="oAddress.Name" type="text" />
                </div>
                <div class="mb-2">
                    <label class="fore-label" asp-for="oAddress.ModificationDate">Fecha modificación</label>
                    <input class="form-control form-control-sm" asp-for="oAddress.ModificationDate" type="text" />
                </div>
                <div class="mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="oAddress.Enabled">
                        <label class="form-check-label" for="flexSwitchCheckChecked" asp-for="oAddress.Enabled">Habilitado</label>
                    </div>
                </div>

                <div class="mb-3">
                    @if (Model.oAddress.IdAdd == 0)
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                    }
                    else
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                    }
                    <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Addresses">Volver</a>
                </div>
        </form>
    </div>

</div>