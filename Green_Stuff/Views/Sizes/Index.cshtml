@model List<Green_Stuff.Models.Size>
@{
    ViewData["Title"] = "Tamaño";
}
<div class="card">
    <div class="card-header">
        <h5>Lista de tamaños</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Detail" asp-controller="Sizes" asp-route-IdItem="0">Crear nuevo</a>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tamaño</th>
                    <th>Descripcion</th>
                    <th>Fecha modificacion</th>
                    <th>Habilitado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdSize</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.ModificationDate</td>
                        <td>@item.Enabled</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="Sizes" asp-route-IdSize="@item.IdSize">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Sizes" asp-route-IdSize="@item.IdSize">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>